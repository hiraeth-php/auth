{
    "name": "hiraeth/auth",
    "description": "RBAC/ACL auth for the Hiraeth Nano-Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "msahagian@dotink.org",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
        "hiraeth/app": "^3.0",
        "hiraeth/signal": "^3.0",
        "imarc/auth": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "test/src"
        ]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "ocramius/package-versions": true,
            "imarc/opus": true
        }
    }
}
